{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
   "packageRules": [
    {
      "enabled": false,
      "matchPackagePatterns": ["*"],
      "automerge": true
    }
  ],
 "vulnerabilityAlerts": {
    "enabled": true,
    "packageRules": [
    {
      "groupName": "Renovate Security Updates",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "major"]
    }
  ],
    "labels": ["RENOVATE"],
   "commitMessagePrefix": ["RENOVATE"],
    "automerge": true
  },
  "osvVulnerabilityAlerts": true,
  "ignoreTests": true,
  "platformAutomerge": true,
  "automergeType": "pr"
}
